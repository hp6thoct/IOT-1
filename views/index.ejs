<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IOT Project</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        p {
            margin-top: 20px;
            color: #333;
        }

        form {
            margin-top: 10px;
        }

        label {
            font-weight: bold;
            margin-right: 10px;
        }

        input[type="submit"] {
            padding: 8px;
            font-size: 14px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>IOT Group 19</h1>

    <!-- Display current state of Light and AC beside the toggle buttons -->
    <p>Current Light State: <%= lightState %></p>
    <p>Current AC State: <%= acState %></p>

    <!-- Table to display check-in data and states -->
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Student Id</th>
            </tr>
        </thead>
        <tbody>
            <% for (const row of checkInValues) { %>
                <tr>
                    <td><%= row[0] %></td>
                    <td><%= row[1] %></td>
                    <td><%= row[2] %></td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Button to toggle Light State -->
    <form action="/updateLightState" method="POST">
        <div>
            <label for="lightState">Toggle Light:</label>
            <input type="submit" value="Toggle">
        </div>
    </form>

    <!-- Button to toggle AC State -->
    <form action="/updateACState" method="POST">
        <div>
            <label for="acState">Toggle AC:</label>
            <input type="submit" value="Toggle">
        </div>
    </form>

    <script>
        // Auto-update every 60,000ms (60 seconds)
        setInterval(function() {
            location.reload();
        }, 60000);
    </script>
</body>
</html>
