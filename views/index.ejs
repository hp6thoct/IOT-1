<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IOT Project</title>
    <style>
        /* Your existing styles here */

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>
<body>
    <h1>IOT Group 19</h1>

    <!-- Display current state of Light and AC beside the toggle buttons -->
    <p>Current Light State: <%= lightState %></p>
    <p>Current AC State: <%= acState %></p>

    <!-- Table to display Nhiệt độ phòng, Độ ẩm, and Khí Gas data -->
    <table>
        <thead>
            <tr>
                <th>Nhiệt độ phòng</th>
                <th>Độ ẩm</th>
                <th>Khí Gas</th>
            </tr>
        </thead>
        <tbody>
            <% for (const row of checkInValues) { %>
                <tr>
                    <td><%= row[0] %></td>
                    <td><%= row[1] %></td>
                    <td><%= row[2] %></td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Button to toggle Light State -->
    <form action="/updateLightState" method="POST">
        <div>
            <label for="lightState">Toggle Light:</label>
            <input type="submit" value="Toggle">
        </div>
    </form>

    <!-- Button to toggle AC State -->
    <form action="/updateACState" method="POST">
        <div>
            <label for="acState">Toggle AC:</label>
            <input type="submit" value="Toggle">
        </div>
    </form>

    <script>
        // Auto-update every 60,000ms (60 seconds)
        setInterval(function() {
            location.reload();
        }, 60000);
    </script>
</body>
</html>
